<PreferenceScreen 
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
             android:title="@string/candy_settings_title">
   
    <!-- AdBlocker -->
    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:summary="@string/summary_hfm"
        android:fragment="com.android.settings.candy.hfm.HfmSettings"/>

    <!-- Alerts -->
    <PreferenceScreen
        android:id="@+id/notification_manager"
        android:title="@string/notification_alert_manager"
        android:summary="@string/summary_alert_notification_manager"
        android:fragment="com.android.settings.notification.NotificationManagerSettings"/>

    <!-- Animations -->
    <PreferenceScreen
        android:key="animations"
        android:fragment="com.android.settings.candy.AnimationsSettings"
        android:title="@string/animations_settings"
        android:summary="@string/summary_animation_settings"/>
   
    <!-- App Circle Bar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:fragment="com.android.settings.candy.AppCircleBar"
        android:title="@string/app_circle_bar_title"
        android:summary="@string/summary_app_circle_sidebar"/>

    <!-- Battery bar -->
    <PreferenceScreen
        android:key="battery_bar"
        android:fragment="com.android.settings.candy.BatteryBar"
        android:title="@string/battery_bar_listview"
        android:summary="@string/battery_bar"/>

    <!-- Buttons -->  
    <PreferenceScreen
        android:id="@+id/button_settings"
        android:title="@string/button_pref_title"
        android:summary="@string/summary_button_settings"
        android:fragment="com.android.settings.ButtonSettings"/>

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.candy.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title"
        android:summary="@string/summary_gesture_anywhere"/>
    
	<!-- Heads up -->
    <PreferenceScreen
        android:key="heads_up_enabled"
        android:title="@string/title_heads_up"
        android:summary="@string/summary_heads_up"
        android:fragment="com.android.settings.candy.HeadsUpSettings" />

    <!-- Lockscreen -->
    <PreferenceScreen
        android:id="@+id/lockscreen_settings"
        android:title="@string/title_lockscreen_settings"
        android:summary="@string/summary_lockscreen_settings"
        android:fragment="com.android.settings.lockscreen.LockScreenSettings"/>

    <!-- Navigation bar -->
    <PreferenceScreen
        android:key="navigation_bar"
        android:fragment="com.android.settings.vanir.NavbarInterface"
        android:title="@string/category_navbar"
        android:summary="@string/summary_navbar"/>
           
    <!-- Notification drawer -->
    <PreferenceScreen
        android:id="@+id/notification_drawer_settings"
        android:title="@string/notification_drawer_title"
        android:summary="@string/summary_notification_drawer"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
        settings:advanced="true"/>
    
    <!-- Recents Panel -->
    <PreferenceScreen
        android:key="recents_panel"
        android:fragment="com.android.settings.candy.RecentsSettings"
        android:title="@string/Recents_panel"
        android:summary="@string/summary_recents_panel"/>
        
    <!-- DeviceHandler device specific screen off gesture settings -->
    <Preference
        android:key="screen_off_gesture_settings"
        android:title="@string/screen_off_gesture_settings_title">
        <intent
            android:action="com.candy.action.LAUNCH_SCREEN_OFF_GESTURE_SETTINGS"
            android:targetPackage="com.candy.device"
            android:targetClass="com.candy.device.settings.ScreenOffGestureSettings" />
    </Preference>

    <!-- Status Bar -->
    <PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/status_bar_settings"
        android:fragment="com.android.settings.candy.StatusBarSettings"
        android:title="@string/status_bar_title"
        android:summary="@string/summary_status_bar"
        settings:advanced="true"/>

</PreferenceScreen>